<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/donor_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donor_img"
                android:layout_marginLeft="5dp"
                android:text="Donor"
                android:textColor="#F44336"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/donor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/donor_img"
                android:gravity="center"
                android:text="This is Donor Name"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/donor_name"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/donor_img"
                android:gravity="center"
                android:text="Blood Group"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/bloodGroupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bloodGroup"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/donor_img"
                android:gravity="center"
                android:text="This is Blood Group"
                android:textColor="#F44336"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/addressId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bloodGroupId"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/donor_img"
                android:gravity="center"
                android:text="This Is Address Line"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/phoneId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressId"
                android:gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/donor_img"
                android:text="01834871500"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/donorCallBtn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_below="@id/phoneId"
                android:layout_toRightOf="@id/donor_img"
                android:layout_marginStart="40dp"
                android:text="Request For Contact"
                android:background="@color/cardview_shadow_end_color"
                android:textSize="14sp"
                android:textColor="#090909"
                android:textAllCaps="false">
            </Button>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>